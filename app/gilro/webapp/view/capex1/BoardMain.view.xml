<mvc:View 
    controllerName="gilro.controller.capex1.BoardMain"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:card="sap.f.cards"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
    xmlns:smartTable="sap.ui.comp.smarttable"
    height="100%">

    <f:DynamicPage id="page"
        headerExpanded="true" 
        toggleHeaderOnTitleClick="true">

        <!-- 페이지 제목 -->
          <f:title> 
            <f:DynamicPageTitle>
                <f:heading>
                    <HBox>
                        <OverflowToolbarButton id="pageNavBackButton" type="Transparent" icon="sap-icon://nav-back" press=".onback" />
                        <Title text="목록" class="sapUiTinyMarginTop"/>
                    </HBox>
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
    <!-- 검색 필터 헤더 -->
        <f:header>
          <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" adjustLabelSpan="false" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                    <form:content>
                        <VBox width="auto">
                            <Label text="ID : " labelFor="P_number" ></Label>     
                            <Input id="P_id" width="95%"/>
                        </VBox>
                        <VBox width="auto">
                            <Label text="Author : " ></Label>
                            <Input id="P_author" valueHelpOnly="false" showValueHelp="true" valueHelpRequest=".handleTableSelectDialogPress"/>
                        </VBox>
                        <VBox width="auto">
                            <Label text="Title : " labelFor="P_company"></Label>
                            <Input id="P_title" />
                        </VBox>
                        <HBox justifyContent="End">
                            <Button text="검색" type="Emphasized" press="onSearch"/>
                            <Button text="초기화" type="Transparent" press="onPressReset" class="sapUiTinyMarginBegin"/>
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData>           
                        </HBox>         
                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>  
    <!-- 테이블 정보 -->
        <f:content>
            <Table
                id="Table"
                width="auto"
                items="{
                    path: 'BooksSelect>/'
                }">
                <headerToolbar>
                    <OverflowToolbar>
                        <Title text="List  ({co>/count})" level="H2"/>
                        <ToolbarSpacer/>
                        <Button icon="sap-icon://excel-attachment" press=".onDataExport">
                            <layoutData>
                                <OverflowToolbarLayoutData priority="NeverOverflow" />
                            </layoutData>
                        </Button>
                        <Button icon="sap-icon://filter" press=".onSetFilter">
                            <layoutData>
                                <OverflowToolbarLayoutData priority="NeverOverflow" />
                            </layoutData>
                        </Button>
                    </OverflowToolbar>
                </headerToolbar>
                <infoToolbar>
					<OverflowToolbar id="FilterBar" visible="false">
						<Text id="FilterLabel" />
					</OverflowToolbar>
				</infoToolbar>
                <columns>
                    <Column>
                        <Text text="ID" />
                    </Column>
                    <Column>
                        <Text text="author" />
                    </Column>
                    <Column>
                        <Text text="author_ID" />
                    </Column>
                    <Column>
                        <Text text="stock" />
                    </Column>
                    <Column>
                        <Text text="title" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem type="Navigation" press=".onroutepage">
                        <cells>
                            <Text text="{BooksSelect>ID}" />    
                            <Text text="{BooksSelect>name}" />
                            <Text text="{BooksSelect>author_ID}" /> 
                            <Text text="{BooksSelect>stock}" />
                            <Text text="{BooksSelect>title}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
        <f:footer>
        </f:footer>
    </f:DynamicPage>
</mvc:View>